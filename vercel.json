{
  "version": 2,
  "buildCommand": "./vercel_build.sh",
  "outputDirectory": "frontend/build",
  "installCommand": "echo 'No install command needed'",
  "builds": [
    {
      "src": "api/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.11",
        "maxLambdaSize": "15mb",
        "includeFiles": [
          "backend/**"
        ],
        "excludeFiles": [
          "**/__pycache__/**",
          "**/*.pyc",
          "**/migrations/**",
          "**/tests/**",
          "**/test*.py",
          "**/*.log",
          "**/*.pid",
          "**/db.sqlite3",
          "**/venv/**",
          "**/.pytest_cache/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/wsgi.py"
    }
  ]
}
