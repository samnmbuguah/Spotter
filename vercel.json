{
  "version": 2,
  "builds": [
    {
      "src": "api/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.11",
        "maxLambdaSize": "15mb",
        "includeFiles": [
          "backend/**/*.py",
          "backend/**/*.txt",
          "backend/**/*.json",
          "!backend/**/*.pyc",
          "!backend/**/__pycache__/**",
          "!backend/**/migrations/**",
          "!backend/db.sqlite3",
          "!backend/venv/**",
          "!backend/.pytest_cache/**",
          "!backend/**/*.log",
          "!backend/**/*.pid"
        ]
      }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/wsgi.py"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "buildCommand": "./vercel_build.sh",
  "outputDirectory": "frontend/build"
}
